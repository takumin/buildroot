config BR2_PACKAGE_ELOGIND_ARCH_SUPPORTS
	bool
	# see src/basic/architecture.h
	default y if BR2_arc
	default y if BR2_aarch64 || BR2_aarch64_be
	default y if BR2_arm || BR2_armeb
	default y if BR2_i386 || BR2_x86_64
	default y if BR2_m68k
	default y if BR2_mips || BR2_mipsel || BR2_mips64 || BR2_mips64el
	default y if BR2_powerpc || BR2_powerpc64 || BR2_powerpc64le
	default y if BR2_nios2
	default y if BR2_riscv
	default y if BR2_sh4 || BR2_sh4eb || BR2_sh4a || BR2_sh4aeb
	default y if BR2_sparc || BR2_sparc64
	default y if BR2_s390x

config BR2_PACKAGE_ELOGIND
	bool "elogind"
	depends on BR2_PACKAGE_ELOGIND_ARCH_SUPPORTS
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_5
	depends on BR2_TOOLCHAIN_HAS_SSP
	depends on BR2_TOOLCHAIN_HEADERS_AT_LEAST_5_10 # src/basic/linux/if.h:x25_hdlc_proto
	depends on BR2_TOOLCHAIN_USES_GLIBC
	depends on BR2_USE_MMU
	select BR2_PACKAGE_DBUS if !BR2_PACKAGE_DBUS_BROKER # runtime
	select BR2_PACKAGE_HAS_UDEV
	select BR2_PACKAGE_LIBCAP
	select BR2_PACKAGE_UTIL_LINUX
	select BR2_PACKAGE_UTIL_LINUX_LIBMOUNT
	select BR2_PACKAGE_UTIL_LINUX_LIBS
	select BR2_PACKAGE_UTIL_LINUX_MOUNT
	help
	  Elogind User, Seat and Session Manager.

	  Elogind is the systemd project's "logind", extracted out
	  to be a standalone daemon.

	  It integrates with PAM to know the set of users that are
	  logged in to a system and whether they are logged in
	  graphically, on the console, or remotely.

	  Elogind exposes this information via the standard
	  org.freedesktop.login1 D-Bus interface, as well as
	  through the file system using systemd's standard
	  /run/systemd layout.

	  Elogind also provides "libelogind", which is a subset
	  of the facilities offered by "libsystemd".

	  There is a "libelogind.pc" pkg-config file as well.

	  https://github.com/elogind/elogind
